<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/add_contacts_dialog_view"
    android:orientation="vertical"
    android:background="@drawable/et_shape"
    android:padding="10dp">

    <EditText
        android:id="@+id/et_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="姓名"
        android:textSize="30sp"
        android:minHeight="50dp"
        android:background="@drawable/et_shape"
        android:drawableLeft="@drawable/contact"/>

    <EditText
        android:id="@+id/et_mobile"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:hint="手机号"
        android:textSize="30sp"
        android:minHeight="50dp"
        android:background="@drawable/et_shape"
        android:drawableLeft="@drawable/mobile"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="10dp">

        <Button
            android:gravity="center"
            android:padding="2dp"
            android:id="@+id/btn_save_contacts"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/confirm"
            android:text="确认"
            android:textSize="18sp"
            android:background="@drawable/add_contacts_confirm_cancel"/>

        <Button
            android:gravity="center"
            android:padding="2dp"
            android:id="@+id/btn_cancel_contacts"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/cancel"
            android:background="@drawable/add_contacts_confirm_cancel"
            android:text="取消"
            android:textSize="18sp"
            />

    </LinearLayout>

</LinearLayout>
